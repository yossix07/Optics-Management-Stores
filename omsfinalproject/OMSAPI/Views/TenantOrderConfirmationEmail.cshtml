<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <!-- Latest compiled and minified CSS -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">

        <!-- jQuery library -->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>

        <!-- Latest compiled JavaScript -->
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

        <link href="https://app.bootstrapemail.com" />

    </head>
    <body class="bg-blue-900">
        <div class="container">
            <div class="space-y-4 mb-6">
                <h1 class="text-4xl fw-800 text-light">A new order has been received</h1>
                <h3 class="text-4xl fw-800 text-light">Order number: @Model.OrderResponseDto.Id</h3>
                <h3 class="text-4xl fw-800 text-light">Customer name: @Model.OrderResponseDto.UserName</h3>
                <h3 class="text-4xl fw-800 text-light">Customer email: @Model.OrderResponseDto.UserEmail</h3>
                <p class="my-6 ax-center text-xl text-center fw-200 text-light">The customer is waiting for you to confirm your approval to come pick it up.</p>
            </div>
            <div class="card rounded-3xl px-4 py-8 p-lg-10 mb-6">
                <h3 class="text-center">List of products</h3>
                <table class="table">
                    <thead class="thead-dark">
                        <tr>
                            <th>Product</th>
                            <th>Quantity</th>
                            <th>Price</th>
                            <th>Total Price</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in @Model.OrderResponseDto.OrderItems)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.Quantity</td>
                                <td>@item.Price</td>
                                <td>@item.TotalPrice</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="message text-light">
                <p class="my-4 text-xl fw-200">Thank you for choosing our service.</p>
            </div>
        </div>
    </body>
</html>

